<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient1"
    tools:context=".add">

    <LinearLayout
        android:id="@+id/welcomeLinear"
        android:layout_width="402dp"
        android:layout_height="209dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="38dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:fontFamily="@font/dancing_script_bold"
            android:text="ADOPeTs"
            android:textAlignment="center"
            android:textColor="#201E1E"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:fontFamily="@font/dancing_script_bold"
            android:text="Welcome"
            android:textAlignment="center"
            android:textColor="#0E0E0E"
            android:textSize="38sp" />
    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="355dp"
        android:layout_height="95dp"
        android:layout_marginTop="84dp"
        android:backgroundTint="@color/teal_200"
        android:fontFamily="@font/eb_garamond"
        android:onClick="adpet"
        android:text="Add Pet"
        android:textSize="24sp"
        android:background="@drawable/rounded_corner"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeLinear" />

    <Button
        android:id="@+id/button3"
        android:layout_width="356dp"
        android:layout_height="107dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="@color/teal_200"
        android:fontFamily="@font/eb_garamond"
        android:text="Add pet accessories"
        android:onClick="addAccessories"
        android:background="@drawable/rounded_corner"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />
</androidx.constraintlayout.widget.ConstraintLayout>